{
  "name": "scientia-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit --pretty",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "husky",
    "git:sync": "./scripts/git-sync.sh",
    "git:review": "git diff --cached --name-only | xargs npm run lint:fix --",
    "git:quick-sync": "git pull --rebase && npm run validate && git push",
    "deploy": "./scripts/deploy.sh",
    "deploy:preview": "npm run build && npx wrangler pages deploy out --project-name=scientia-capital"
  },
  "dependencies": {
