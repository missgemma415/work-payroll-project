{
  "name": "scientia-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit --pretty",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "husky",
    "git:sync": "./scripts/git-sync.sh",
    "git:review": "git diff --cached --name-only | xargs npm run lint:fix --",
    "git:quick-sync": "git pull --rebase && npm run validate && git push",
    "deploy": "vercel --prod",
    "test": "jest",
    "migrate": "tsx scripts/run-migrations.ts",
    "migrate:reset": "tsx scripts/run-migrations.ts reset",
    "migrate:status": "tsx scripts/run-migrations.ts status",
    "db:test": "tsx -e \"import { testConnection } from './lib/database'; testConnection().then(ok => console.log('DB Connection:', ok ? '✅ Success' : '❌ Failed'))\"",
    "agent:verify": "node .claude/guardrails/verify-agent.js",
    "agent:checkpoint": "node .claude/guardrails/agent-handoff-validator.js checkpoint",
    "agent:handoff": "node .claude/guardrails/agent-handoff-validator.js validate",
    "agent:track": "node .claude/guardrails/execution-tracker.js",
    "agent:snapshot": "node .claude/guardrails/file-state-monitor.js snapshot",
    "agent:metrics": "node .claude/guardrails/reliability-metrics.js report",
    "agent:dashboard": "node .claude/guardrails/verify-agent.js dashboard"
  },
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.7.0",
    "@google/genai": "^1.11.0",
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@tanstack/react-query": "^5.68.2",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "framer-motion": "^11.15.0",
    "jose": "^6.0.12",
    "lucide-react": "^0.464.0",
    "next": "^15.1.6",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.2",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "web-streams-polyfill": "^4.1.0"
  }
}
